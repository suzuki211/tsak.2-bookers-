<body>
    <p id="notice"></p>

   <h1>Books</h1>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  <table>
      <% @books.each do |book| %>
       <span><%= link_to book.title, "/books/#{book.id}" %></span>
       <span><%= book.body %></span>
      <% end %>
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <div class="field">
     <h4>title</h4>
     <%= f.text_field :title %>
    </div>
    <div class="field">
     <h4>Body</h4>
     <%= f.text_area :body %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>
</body>
