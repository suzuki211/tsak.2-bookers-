<body>
    <p id="notice"></p>

   <h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <text>
      <% @books.each do |book| %>
       <p><%= book.title %></p>
       <p><%= book.body %></p>
      <% end %>
    </text>
  </table>
  <h2>New book</h2>
  <%= form_with model:@book, local:true do |f| %>
    <div class="field">
     <h4>title</h4>
     <%= f.text_field :title %>
    </div>
    <div class="field">
     <h4>Body</h4>
     <%= f.text_area :body %>
    </div>
    <%= f.submit '投稿' %>
  <% end %>
</body>